@inherits LayoutComponentBase
@inject NavigationManager navigationManager
@inject CookieService cookieService

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <MudImage Src="favicon.png" Height="32" Alt="Pineapple Favicon" Class="me-4" />
        <MudText Typo="Typo.h5">Pineapple</MudText>

        <MudSpacer></MudSpacer>

        <MudLink Href="/" Color="Color.Inherit" Class="me-2">Dashboard</MudLink>
        <MudLink OnClick="HandleLogout" Color="Color.Inherit" Class="ms-2">Logout</MudLink>
    </MudAppBar>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="pt-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    async void HandleLogout()
    {
        await cookieService.SetPayloadToken(null);
        navigationManager.NavigateTo("/login", forceLoad: true);
    }
}
