@inherits LayoutComponentBase
@inject NavigationManager navigationManager
@inject CookieService cookieService

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <MudAvatar Class="me-4">
            <MudImage Src="favicon.png" Alt="Pineapple"></MudImage>
        </MudAvatar>
        <MudText Typo="Typo.h5">Pineapple</MudText>


        <MudLink Href="/" Color="Color.Inherit" Class="ms-4 me-4">Dashboard</MudLink>
        <MudLink OnClick="HandleLogout" Color="Color.Inherit" Class="me-4">Logout</MudLink>
        <MudSpacer></MudSpacer>
        <MudLink Href="me">
            <MudAvatar Size="Size.Medium" title="Me">
                <MudImage Src="luffy.jpg" Alt="An image of a Pirate!"></MudImage>
            </MudAvatar>
        </MudLink>
    </MudAppBar>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="pt-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    async void HandleLogout()
    {
        await cookieService.SetPayloadToken(null);
        navigationManager.NavigateTo("/login", forceLoad: true);
    }
}
